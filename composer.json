{
    "name": "drupal/legacy-project",
    "description": "Project template for Drupal 8 projects with composer following drupal/drupal layout",
    "type": "project",
    "license": "GPL-2.0-or-later",
    "homepage": "https://www.drupal.org/project/drupal",
    "support": {
        "docs": "https://www.drupal.org/docs/user_guide/en/index.html",
        "chat": "https://www.drupal.org/node/314178"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        }
    ],
    "require": {
        "academicpuma/citeproc-php": "^1.0",
        "adci/full-name-parser": "^0.2.4",
        "audiolabs/bibtexparser": "dev-master",
        "caseyamcl/php-marc21": "^1.0",
        "composer/installers": "^1.2",
        "drupal/admin_toolbar": "^2.2",
        "drupal/backup_migrate": "^4.1",
        "drupal/captcha": "^1.0",
        "drupal/chosen": "^2.9",
        "drupal/commerce": "^2.16",
        "drupal/commerce_order": "^2.16",
        "drupal/commerce_payment": "^2.16",
        "drupal/commerce_price": "^2.16",
        "drupal/commerce_recurring": "^1.0@beta",
        "drupal/commerce_store": "^2.16",
        "drupal/core-composer-scaffold": "^8.8",
        "drupal/core-project-message": "^8.8",
        "drupal/core-recommended": "^8.8",
        "drupal/core-vendor-hardening": "^8.8",
        "drupal/ctools": "^3.4",
        "drupal/editor_advanced_link": "^1.6",
        "drupal/embed": "^1.3",
        "drupal/entity_embed": "^1.1",
        "drupal/entity_reference_revisions": "^1.8",
        "drupal/field_group": "^3.0",
        "drupal/fontawesome": "^2.15",
        "drupal/inline_entity_form": "^1.0@RC",
        "drupal/masquerade": "2.0-beta3",
        "drupal/menu_breadcrumb": "^1.12",
        "drupal/page_manager": "^4.0@beta",
        "drupal/panels": "^4.6",
        "drupal/pathauto": "^1.6",
        "drupal/profile": "^1.1",
        "drupal/recaptcha": "^2.5",
        "drupal/responsive_tables_filter": "^1.4",
        "drupal/role_expire": "^1.4",
        "drupal/roleassign": "^1.0@beta",
        "drupal/search_api_solr": "^3.8",
        "drupal/smtp": "^1.0@beta",
        "drupal/video_embed_field": "^2.3",
        "drupal/views_data_export": "1.0-beta4",
        "drupal/views_templates": "^1.1",
        "drupal/we_megamenu": "^1.9",
        "oomphinc/composer-installers-extender": "^1.1",
        "technosophos/libris": "^2.0"
    },
    "require-dev": {
        "drupal/core-dev": "^8.8"
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true
    },
    "extra": {
        "drupal-scaffold": {
            "locations": {
                "web-root": "./"
            },
		"drupal-core-vendor-hardening": {
			"vendor/package": ["test", "documentation"]
		  }		
        },
        "installer-paths": {
            "core": ["type:drupal-core"],
            "libraries/{$name}": ["type:drupal-library", "harvesthq/chosen"],
            "modules/contrib/{$name}": ["type:drupal-module"],
            "profiles/contrib/{$name}": ["type:drupal-profile"],
            "themes/contrib/{$name}": ["type:drupal-theme"],
            "drush/Commands/contrib/{$name}": ["type:drupal-drush"],
            "modules/custom/{$name}": ["type:drupal-custom-module"],
            "themes/custom/{$name}": ["type:drupal-custom-theme"]
        },
		"installer-types": [
			"library"
		],		
        "drupal-core-project-message": {
            "include-keys": ["homepage", "support"],
            "post-create-project-cmd-message": [
                "<bg=blue;fg=white>                                                         </>",
                "<bg=blue;fg=white>  Congratulations, youâ€™ve installed the Drupal codebase  </>",
                "<bg=blue;fg=white>  from the drupal/legacy-project template!               </>",
                "<bg=blue;fg=white>                                                         </>",
                "",
                "<bg=yellow;fg=black>Next steps</>:",

                "  * Install the site: https://www.drupal.org/docs/8/install",
                "  * Read the user guide: https://www.drupal.org/docs/user_guide/en/index.html",
                "  * Get support: https://www.drupal.org/support",
                "  * Get involved with the Drupal community:",
                "      https://www.drupal.org/getting-involved",
                "  * Remove the plugin that prints this message:",
                "      composer remove drupal/core-project-message"
            ]
        }
    }
}
