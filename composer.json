{
    "name": "drupal/legacy-project",
    "description": "Project template for Drupal 8 projects with composer following drupal/drupal layout",
    "type": "project",
    "license": "GPL-2.0-or-later",
    "homepage": "https://www.drupal.org/project/drupal",
    "support": {
        "docs": "https://www.drupal.org/docs/user_guide/en/index.html",
        "chat": "https://www.drupal.org/node/314178"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        }
    ],
    "require": {
        "academicpuma/citeproc-php": "^1.0",
        "adci/full-name-parser": "^0.2.4",
        "audiolabs/bibtexparser": "dev-master",
        "caseyamcl/php-marc21": "^1.0",
        "composer/installers": "^1.2",
        "drupal/admin_toolbar": "^2.2",
        "drupal/autofloat": "^1.1",
        "drupal/backup_migrate": "^4.1",
        "drupal/bootstrap_library": "^1.13",
        "drupal/captcha": "^1.1",
        "drupal/chosen": "^2.9",
        "drupal/collapsiblock": "^2.1",
        "drupal/colorbox": "^1.6",
        "drupal/colorbutton": "^1.2",
        "drupal/commerce": "^2.18",
        "drupal/commerce_cart": "^2.18",
        "drupal/commerce_order": "^2.18",
        "drupal/commerce_payment": "^2.18",
        "drupal/commerce_price": "^2.18",
        "drupal/commerce_product": "^2.18",
        "drupal/commerce_recurring": "^1.0@beta",
        "drupal/commerce_store": "^2.18",
        "drupal/commerce_tax": "^2.18",
        "drupal/core-composer-scaffold": "^8.8",
        "drupal/core-project-message": "^8.8",
        "drupal/core-recommended": "^8.8",
        "drupal/core-vendor-hardening": "^8.8",
        "drupal/ctools": "^3.4",
        "drupal/ds": "^3.7",
        "drupal/editor_advanced_link": "^1.8",
        "drupal/embed": "^1.4",
        "drupal/entity_embed": "^1.1",
        "drupal/entity_reference_revisions": "^1.8",
        "drupal/entity_update": "^1.2@RC",
        "drupal/eu_cookie_compliance": "^1.9",
        "drupal/feeds": "3.0-alpha7",
        "drupal/field_defaults": "^1.1",
        "drupal/field_group": "^3.0",
        "drupal/fontawesome": "^2.16",
        "drupal/inline_entity_form": "^1.0@RC",
        "drupal/insert_view_adv": "^1.0@beta",
        "drupal/job_scheduler": "^3.1",
        "drupal/login_emailusername": "^1.1",
        "drupal/masquerade": "^2.0@beta",
        "drupal/menu_block": "^1.6",
        "drupal/menu_breadcrumb": "^1.13",
        "drupal/migrate_upgrade": "^3.2",
        "drupal/module_filter": "^3.1",
        "drupal/page_manager": "^4.0@beta",
        "drupal/panels": "^4.6",
        "drupal/paragraphs": "^1.12",
        "drupal/pathauto": "^1.8",
        "drupal/profile": "^1.1",
        "drupal/range": "^1.2",
        "drupal/recaptcha": "^2.5",
        "drupal/responsive_tables_filter": "^1.5",
        "drupal/role_expire": "^1.6",
        "drupal/roleassign": "^1.0@beta",
        "drupal/search_api": "^1.17",
        "drupal/search_api_solr": "1.5",
        "drupal/smtp": "^1.0@RC",
        "drupal/superfish": "^1.4",
        "drupal/token": "^1.7",
        "drupal/token_filter": "^1.2",
        "drupal/video_embed_field": "^2.4",
        "drupal/views_bootstrap": "3.1",
        "drupal/views_data_export": "^1.0@RC",
        "drupal/views_templates": "^1.1",
        "drupal/we_megamenu": "^1.9",
        "oomphinc/composer-installers-extender": "^1.1",
        "technosophos/libris": "^2.0"
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true
    },
    "extra": {
        "drupal-scaffold": {
            "locations": {
                "web-root": "./"
            },
		"drupal-core-vendor-hardening": {
			"vendor/package": ["test", "documentation"]
		  }		
        },
        "installer-paths": {
            "core": [
                "type:drupal-core"
            ],
            "libraries/{$name}": [
                "type:drupal-library"
            ],
            "modules/contrib/{$name}": [
                "type:drupal-module"
            ],
            "profiles/contrib/{$name}": [
                "type:drupal-profile"
            ],
            "themes/contrib/{$name}": [
                "type:drupal-theme"
            ],
            "drush/Commands/contrib/{$name}": [
                "type:drupal-drush"
            ],
            "modules/custom/{$name}": [
                "type:drupal-custom-module"
            ],
            "themes/custom/{$name}": [
                "type:drupal-custom-theme"
            ]
        },
		"installer-types": [
			"library"
		],		
        "drupal-core-project-message": {
            "include-keys": [
                "homepage",
                "support"
            ],
            "post-create-project-cmd-message": [
                "<bg=blue;fg=white>                                                         </>",
                "<bg=blue;fg=white>  Congratulations, youâ€™ve installed the Drupal codebase  </>",
                "<bg=blue;fg=white>  from the drupal/legacy-project template!               </>",
                "<bg=blue;fg=white>                                                         </>",
                "",
                "<bg=yellow;fg=black>Next steps</>:",
                "  * Install the site: https://www.drupal.org/docs/8/install",
                "  * Read the user guide: https://www.drupal.org/docs/user_guide/en/index.html",
                "  * Get support: https://www.drupal.org/support",
                "  * Get involved with the Drupal community:",
                "      https://www.drupal.org/getting-involved",
                "  * Remove the plugin that prints this message:",
                "      composer remove drupal/core-project-message"
            ]
        }
    }
}
